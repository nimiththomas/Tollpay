<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="30dp"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".ChooseVehicle">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25dp"

        android:text="Add Your Vehicle"/>

    <Spinner
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/sptype"
        android:tooltipText="Vehicletype"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etregno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="#000000"
        app:boxBackgroundColor="#FFFFFF"
        android:layout_marginTop="20dp"
        app:placeholderTextColor="#000000"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Vehicle Reg No"
        android:textColorHint="#000000"
        app:endIconMode="custom"
        app:errorEnabled="true"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:inputType="text"
            android:hint="KL-07-AP-8888"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etvehname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="#000000"
        app:boxBackgroundColor="#FFFFFF"
        android:layout_marginTop="20dp"
        app:placeholderTextColor="#000000"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Vehicle Name"
        android:textColorHint="#000000"
        app:endIconMode="custom"
        app:errorEnabled="true"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:inputType="text"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnregister"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Register" />


</LinearLayout>